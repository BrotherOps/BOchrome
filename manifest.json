{
  "name": "BOchrome",
  "description": "Chrome extention for BrotherOps",
  "version": "0.1.3",
  "manifest_version": 3,
  "action": {
    "default_icon": "img/bo_extension.png"
  },
  "icons": {
    "16": "img/bo_extension16.png",
    "32": "img/bo_extension32.png",
    "48": "img/bo_extension48.png",
    "128": "img/bo_extension128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["img/*"],
      "matches": ["<all_urls>"]
    }
  ]
}